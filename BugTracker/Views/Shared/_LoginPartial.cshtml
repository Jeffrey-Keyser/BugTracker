@using Microsoft.AspNetCore.Identity
@using BugTracker.Areas.Identity.Data
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Http;
@using System.Security.Claims;

@inject SignInManager<BugTrackerUser> SignInManager
@inject UserManager<BugTrackerUser> UserManager
@inject IAuthorizationService AuthorizationService
@inject BugTracker.Models.Services.UserFriendService FriendService
@inject BugTracker.Models.Services.UserNotificationService NotificationService

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            int numRequestsDisplay = 0;
            int numNotificationsDisplay = 0;
        <ul class="navbar-nav ml-auto nav-flex-icons">
            <li class="nav-item avatar dropdown">
                <a class="nav-link waves-effect waves-light" id="navbarDropdownMenuLink-1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    <span class="badge badge-danger ml-2">@FriendService.numFriendRequests()</span>
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M13 14s1 0 1-1-1-4-6-4-6 3-6 4 1 1 1 1h10zm-9.995-.944v-.002.002zM3.022 13h9.956a.274.274 0 0 0 .014-.002l.008-.002c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664a1.05 1.05 0 0 0 .022.004zm9.974.056v-.002.002zM8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                    </svg>
                </a>
                <div class="dropdown-menu dropdown-menu-lg-right dropdown-secondary" aria-labelledby="navbarDropdownMenuLink-1">
                @if (FriendService.numFriendRequests() > 0)
                {
                    @foreach (var item in FriendService.getFriendRequests())
                    {
                        if (numRequestsDisplay == 0)
                        {
                            <div class="containerTickets">
                                @item.sender.Email
                                <div style="color: lightgreen; padding-left: 20px">
                                    <a style="color: darkgreen" asp-area="" asp-controller="User" asp-action="AddFriend" asp-route-senderId="@item.senderId" asp-route-recieverId="@item.recieverId" asp-route-accepted="true"> Accept </a>
                                </div>
                                <div style="color: indianred; padding-left: 20px">
                                    <a style="color: darkred" asp-area="" asp-controller="User" asp-action="AddFriend" asp-route-senderId="@item.senderId" asp-route-recieverId="@item.recieverId" asp-route-accepted="false"> Decline </a>
                                </div>
                            </div>

                        }
                        else if (numRequestsDisplay == 1)
                        {
                            <div class="containerTickets">
                                @item.sender.Email
                                <div style="color: lightgreen; padding-left: 20px">
                                    <a style="color: darkgreen" asp-area="" asp-controller="User" asp-action="AddFriend" asp-route-senderId="@item.senderId" asp-route-recieverId="@item.recieverId" asp-route-accepted="true"> Accept </a>
                                </div>
                                <div style="color: indianred; padding-left: 20px">
                                    <a style="color: darkred" asp-area="" asp-controller="User" asp-action="AddFriend" asp-route-senderId="@item.senderId" asp-route-recieverId="@item.recieverId" asp-route-accepted="false"> Decline </a>
                                </div>
                            </div>
                        }
                        else if (numRequestsDisplay == 2)
                        {
                            <div class="containerTickets">
                                @item.sender.Email
                                <div style="color: lightgreen; padding-left: 20px">
                                    <a style="color: darkgreen" asp-area="" asp-controller="User" asp-action="AddFriend" asp-route-senderId="@item.senderId" asp-route-recieverId="@item.recieverId" asp-route-accepted="true"> Accept </a>
                                </div>
                                <div style="color: indianred; padding-left: 20px">
                                    <a style="color: darkred" asp-area="" asp-controller="User" asp-action="AddFriend" asp-route-senderId="@item.senderId" asp-route-recieverId="@item.recieverId" asp-route-accepted="false"> Decline </a>
                                </div>
                            </div>
                        }
                        numRequestsDisplay++;
                    }
                }
                else
                {
                <p style="text-align: center"> No requests to display! </p>
                }
                </div>

                    </li>
             </ul>


        <ul class="navbar-nav ml-auto nav-flex-icons">
            <li class="nav-item avatar dropdown">
                <a class="nav-link waves-effect waves-light" id="navbarDropdownMenuLink-2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    <span class="badge badge-danger ml-2">@NotificationService.numNotifications()</span>
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-bell" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2z" />
                        <path fill-rule="evenodd" d="M8 1.918l-.797.161A4.002 4.002 0 0 0 4 6c0 .628-.134 2.197-.459 3.742-.16.767-.376 1.566-.663 2.258h10.244c-.287-.692-.502-1.49-.663-2.258C12.134 8.197 12 6.628 12 6a4.002 4.002 0 0 0-3.203-3.92L8 1.917zM14.22 12c.223.447.481.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 1 1 1.99 0A5.002 5.002 0 0 1 13 6c0 .88.32 4.2 1.22 6z" />
                    </svg>
                </a>
                <div class="dropdown-menu dropdown-menu-lg-right dropdown-secondary" aria-labelledby="navbarDropdownMenuLink-2">
                    @if (NotificationService.numNotifications() > 0)
                    {
                        @foreach (var item in NotificationService.GetNotifications())
                        {
                            if (numNotificationsDisplay == 0)
                            {
                                <div class="containerTickets">
                                    @item.NotificationAuthor.Email
                                <div style="color: lightgreen; padding-left: 20px">
                                    <a style="color: darkgreen; font-size: small; align-content:center; display: inline-block" asp-area="" asp-controller="User" asp-action="SeenNotification" asp-route-authorId="@item.AuthorId" asp-route-affectedId="@item.AffectedId"> @item.NotificationMessage </a>
                                </div>
                                </div>

                            }
                            else if (numNotificationsDisplay == 1)
                            {
                                <div class="containerTickets">
                                    @item.NotificationAuthor.Email
                                </div>
                            }
                            else if (numNotificationsDisplay == 2)
                            {
                                <div class="containerTickets">
                                    @item.NotificationAuthor.Email
                                </div>
                            }
                            numNotificationsDisplay++;
                        }
                    }
                    else
                    {
                        <p style="text-align: center"> No updates to display! </p>
                    }
                </div>

            </li>
        </ul>

            <ul class="navbar-nav ml-auto nav-flex-icons">
                <li class="nav-item avatar dropdown">
                    <a class="nav-link waves-effect waves-light" id="navbarDropdownMenuLink-3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        <span class="badge badge-danger ml-2">0</span>
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-bug-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M4.978.855a.5.5 0 1 0-.956.29l.41 1.352A4.985 4.985 0 0 0 3 6h10a4.985 4.985 0 0 0-1.432-3.503l.41-1.352a.5.5 0 1 0-.956-.29l-.291.956A4.978 4.978 0 0 0 8 1a4.979 4.979 0 0 0-2.731.811l-.29-.956zM13 6v1H8.5v8.975A5 5 0 0 0 13 11h.5a.5.5 0 0 1 .5.5v.5a.5.5 0 1 0 1 0v-.5a1.5 1.5 0 0 0-1.5-1.5H13V9h1.5a.5.5 0 0 0 0-1H13V7h.5A1.5 1.5 0 0 0 15 5.5V5a.5.5 0 0 0-1 0v.5a.5.5 0 0 1-.5.5H13zm-5.5 9.975V7H3V6h-.5a.5.5 0 0 1-.5-.5V5a.5.5 0 0 0-1 0v.5A1.5 1.5 0 0 0 2.5 7H3v1H1.5a.5.5 0 0 0 0 1H3v1h-.5A1.5 1.5 0 0 0 1 11.5v.5a.5.5 0 1 0 1 0v-.5a.5.5 0 0 1 .5-.5H3a5 5 0 0 0 4.5 4.975z" />
                        </svg>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg-right dropdown-secondary" aria-labelledby="navbarDropdownMenuLink-3">
                        <a class="dropdown-item waves-effect waves-light" href="#">Action <span class="badge badge-danger ml-2">4</span></a>
                        <a class="dropdown-item waves-effect waves-light" href="#">Another action <span class="badge badge-danger ml-2">1</span></a>
                        <a class="dropdown-item waves-effect waves-light" href="#">Something else here <span class="badge badge-danger ml-2">4</span></a>
                    </div>

                </li>
            </ul>

            <li class="nav-item">
                <a class="form-inline nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/ProfileStats" title="Manage"> My Profile  </a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        }
        else
        {

            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
    </ul>
