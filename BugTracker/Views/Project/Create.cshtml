@using Microsoft.AspNetCore.Identity
@using BugTracker.Areas.Identity.Data

@inject SignInManager<BugTrackerUser> SignInManager
@inject UserManager<BugTrackerUser> UserManager

@model BugTracker.Models.Projects;

<br />
<h2 class="text-info">Create New Project</h2>"
<br />

<div class="border container" style="padding:30px">
    <form asp-action="Create" method="post">
        <div class="=form-group row">
            <div class="col-4">
                <p> Author Name </p>
            </div>
            <div class="col-6">
                <input asp-for="Author" class="form-control" value="@User.Identity.Name" readonly />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
        </div>
        <div class="=form-group row">
            <div class="col-4">
                <p> Project Name </p>
            </div>
            <div class="col-6">
                <input asp-for="ProjectName" class="form-control" />
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>
        </div>
        <div>
            @Html.DropDownListFor(Model => Model.projectLanguage, new SelectList(Enum.GetValues(typeof(programmingLanguages))), "Select a Programming Language")
        </div>
        <div>
            <input type="hidden" asp-for="userId" value="@ViewBag.userId" />
        </div>
        <div>
            <input type="hidden" asp-for="TicketList" value="null" />
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
